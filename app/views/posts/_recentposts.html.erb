
<h1>Recent Posts</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Date</th>
	<th></th>
	<th></th>
  </tr>
 
  <%  @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post %></td>
      <% if current_user?(User.find_by_id(post.user_id)) %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'You sho bot dat?' } %></td>
      <% end %>  
    </tr>
  <% end %>
</table>
